<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th>Keywork1</th>
    <th>Score1</th>
    <th>Keyword2</th>
    <th>Score2</th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.name %></td>
    <td><%= idea.description %></td>
    <td><%= idea.picture %></td>
    <td><%= idea.keyword1 %></td>
    <td><%= idea.score1 %></td>
    <td><%= idea.keyword2 %></td>
    <td><%= idea.score2 %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'GetKey', getkey_idea_path(idea) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Idea', new_idea_path %>
